<%- if controller_name != 'sessions' %>
  <%= link_to "Log in", new_user_session_path, :class => 'links' %><br />
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %><br>
  <%= link_to "CREATE ACCOUNT", new_registration_path(resource_name), :class => 'links' %><!-- <span class='break'>&nbsp;/&nbsp;</span> -->
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "FORGOT PASSWORD?", new_password_path(resource_name), :class => 'links', :id => 'linksForgotPassword' %>
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "ACCOUNT CONFIRMATION", new_confirmation_path(resource_name), :class => 'links' %><br />
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "DIDN'T RECEIVE CONFIRMATION INSTRUCTIONS?", new_unlock_path(resource_name), :class => 'links' %><br />
<% end -%>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), :class => 'links' %><br />
  <% end -%>
<% end -%>
