    <script type="text/javascript" charset="utf-8">
        $(document).ready(function() {
            $('#gallery').finalTilesGallery({onComplete: function(){
                // console.log("completed");
                var total_height = parseInt($('#gallery').height()) + 260;
                // console.log(total_height);
                $('#galleriesContent').height(total_height);
            }});
        });

        $(".aboutSelect").mouseover(function(){
        	console.log('drop');
          $("#aboutDrop").addClass('animated slideInDown');
        })

        $(window).load(function() {
            $('#gallery').finalTilesGallery({
                autoLoadURL: "get-images.php",
                autoLoadOffset: 500
            });
        });

        $('body').prepend('<a href="#" class="back-to-top">Back to Top</a>');
    </script>

